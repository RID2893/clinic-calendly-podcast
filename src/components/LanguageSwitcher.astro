---
import type { Language } from '../stores/language';

interface Props {
  currentLang: Language;
}

const { currentLang } = Astro.props;
---

<div class="fixed top-4 right-4 z-50 flex gap-2">
  <a
    href="/en"
    class={`px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 shadow-lg hover:shadow-xl border ${
      currentLang === 'en'
        ? 'bg-primary-blue text-white border-primary-blue'
        : 'bg-white/90 backdrop-blur-sm text-primary-blue hover:bg-primary-blue hover:text-white border-primary-blue/20'
    }`}
  >
    English
  </a>
  <a
    href="/es"
    class={`px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 shadow-lg hover:shadow-xl border ${
      currentLang === 'es'
        ? 'bg-primary-blue text-white border-primary-blue'
        : 'bg-white/90 backdrop-blur-sm text-primary-blue hover:bg-primary-blue hover:text-white border-primary-blue/20'
    }`}
  >
    Espa√±ol
  </a>
</div>