---
import Logo from './Logo.astro';
import { translations, type Language } from '../stores/language';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = translations[lang];
---

<header class="bg-gradient-brand py-12 px-4 relative overflow-hidden">
  <div class="max-w-4xl mx-auto text-center relative z-10">
    <div class="flex justify-center mb-8">
      <Logo className="h-16" />
    </div>
    <div class="mb-4">
      <span class="bg-primary-orange/20 text-white px-4 py-1 rounded-full text-sm font-medium">{t.podcast}</span>
    </div>
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 tracking-tight">{t.title}</h1>
    <p class="text-white/90 text-lg mb-6">{t.subtitle}</p>
    <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 mb-8 max-w-2xl mx-auto">
      <p class="text-white/90 text-sm">
        {t.description}
      </p>
    </div>
    <div class="flex items-center justify-center gap-2 text-white/80 text-sm mb-8">
      <span class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z" />
        </svg>
        {t.newEpisodes}
      </span>
      <span class="w-1 h-1 bg-white/50 rounded-full"></span>
      <span class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
        </svg>
        {t.episodeDuration}
      </span>
    </div>
    <div class="h-1 w-24 bg-primary-orange mx-auto rounded-full"></div>
  </div>
  <div class="absolute inset-0 bg-gradient-to-r from-primary-blue/20 to-primary-orange/20 backdrop-blur-sm"></div>
</header>